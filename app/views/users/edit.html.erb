<section class='user-setting'>
  <h1>User profile setting</h1>

  <%= form_with(model: @user) do |f| %> <%# create a form %>

    <%= f.file_field :avatar %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date %>
     <% if current_user == @user %>
    <%= f.submit 'Save' %>
    <% end %>
  <% end %>
</section>
