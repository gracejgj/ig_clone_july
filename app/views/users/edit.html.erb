<div class='container my-5'>
  <div class="card">
    <div class="card-body my-3 mx-3">
      <h3 class="feature-title pb-2">User profile setting</h3>
      <%= form_with(model: @user) do |f| %>
      <%# create a form %>
        <form>
          <div class="mb-3">
            <%= f.file_field :avatar, class: "form-control" %>
          </div>

          <div class="row mb-3">
            <%= f.label :username, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :username, class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :birth_date, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.date_field :birth_date, class: "form-control" %>
            </div>
          </div>

          <% if current_user == @user %>
            <%= f.submit 'Save', class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </form>
    </div>
  </div>
</div>
